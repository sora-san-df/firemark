{
  "manifest_version": 2,
  "name": "Firemark",
  "version": "1.0",
  "description": "A simple extension to mark text in Firefox",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["firemark.js"]
    }
  ]
}
